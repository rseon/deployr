        <ul>
            <?php
            foreach($this->files as $file) {
                ?>
            
                <li>
                    <label>
                        <input type="checkbox" class="bulk" name="files[]" value="<?php echo $file['filename'] ?>" data-hash="<?php echo $file['hash'] ?>" />
