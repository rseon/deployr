    ?>
    <div class="alert alert-danger">
        <?php echo $this->error ?>
    </div>
    <?php
}
else {
    ?>
    <h2><?php echo $this->__('Modified files') ?></h2>

    <div class="alert alert-warning">
        <?php echo $this->__('This interface makes it possible to publish the modified files in dev on the prod.') ?>.<br />
